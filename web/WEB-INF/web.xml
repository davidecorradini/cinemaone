<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>TimeLogger</filter-name>
        <filter-class>Filters.TimeLogger</filter-class>
    </filter>
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>Filters.SessionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>JspAccessFilter</filter-name>
        <filter-class>Filters.JspAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TimeLogger</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JspAccessFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Listeners.WebappContextListener</listener-class>
    </listener>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:derby://localhost:1527/MultisalaDB;user=pythoni;password=pythoni</param-value>
    </context-param>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>Servlets.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatoPrenotazioni</servlet-name>
        <servlet-class>Servlets.StatoPrenotazioni</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Spettacoli</servlet-name>
        <servlet-class>Servlets.Spettacoli</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProgFilm</servlet-name>
        <servlet-class>Servlets.ProgFilm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DettaglioFilm</servlet-name>
        <servlet-class>Servlets.DettaglioFilm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Prenotazioni</servlet-name>
        <servlet-class>Servlets.Prenotazioni</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>aggiungiPrenTmp</servlet-name>
        <servlet-class>Servlets.aggiungiPrenTmp</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatoPrenotazioni</servlet-name>
        <url-pattern>/output/statoPrenotazioni</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProgFilm</servlet-name>
        <url-pattern>/film.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DettaglioFilm</servlet-name>
        <url-pattern>/dettaglio-film.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Spettacoli</servlet-name>
        <url-pattern>/spettacoli.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Prenotazioni</servlet-name>
        <url-pattern>/prenotazione.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aggiungiPrenTmp</servlet-name>
        <url-pattern>/input/aggiungiPrenotazioneTmp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
